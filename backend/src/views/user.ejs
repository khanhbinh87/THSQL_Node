<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>List Users</title>
        <!-- Latest compiled and minified CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />

        <!-- Latest compiled JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body>
        <div class="user-info-container container">
            <h3 class="mt-3">Create new user :</h3>
            <form action="/users/create-user" method="post">
                <div class="container">
                    <div class="row">
                        <div class="mb-3 mt-3 col-6">
                            <label for="email" class="form-label"
                                >Email address</label
                            >
                            <input
                                type="email"
                                class="form-control"
                                id="email"
                                name="email"
                                required
                            />
                        </div>
                        <div class="col-6"></div>
                        <div class="mb-3 col-6">
                            <label for="password" class="form-label"
                                >Password</label
                            >
                            <input
                                type="password"
                                class="form-control"
                                id="password"
                                name="password"
                                required
                            />
                        </div>
                        <div class="col-6"></div>
                        <div class="mb-3 col-6">
                            <label for="username" class="form-label"
                                >Username</label
                            >
                            <input
                                type="text"
                                class="form-control"
                                id="username"
                                name="username"
                                required
                            />
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">
                                Submit
                            </button>
                        </div>
                    </div>
                </div>
            </form>
            <hr />
            <h3 class="mt-5">List user :</h3>

            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Email</th>
                        <th scope="col">Username</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% userList.forEach(function(item,index){ %>
                    <tr>
                        <th scope="row"><%= item.id %></th>
                        <td><%= item.email %></td>
                        <td><%= item.username %></td>
                        <td style="display: flex;">
                            <a class="btn btn-warning d-block " style="margin-right: 5px;" href="/update-user/<%= item.id %>">Edit</a>
                            <form
                                action="/delete-user/<%= item.id %>"
                                method="post"
                            >
                                <button class="btn btn-danger " type="submit">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </body>
</html>
